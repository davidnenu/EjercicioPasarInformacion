<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ejercicio2_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/conectar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:text="Conectar"
        android:textAlignment="center"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pass"
        android:layout_alignEnd="@+id/conectar"
        android:layout_alignStart="@+id/conectar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:hint="usuario"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/usuario"
        android:layout_alignEnd="@id/usuario"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:hint="password"
        android:inputType="numberPassword"/>

    <Button
        android:id="@+id/aceptar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/pass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="137dp"
        android:onClick="iniciar"
        android:text="Iniciar sesiÃ³n" />

</RelativeLayout>
